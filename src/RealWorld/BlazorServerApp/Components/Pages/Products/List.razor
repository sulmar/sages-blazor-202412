@page "/products"

<h3>List</h3>

<TableTemplate Items="@Products" Context="product">
    <HeaderTemplate>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
    </HeaderTemplate>

    <RowTemplate>
        <td>#@product.Id</td>
        <td>@product.Name</td>
        <td>@product.Description</td>
        <td>@product.Price</td>
    </RowTemplate>

</TableTemplate>

@code {
    private IEnumerable<Product> Products { get; set; } = new List<Product>();

}
